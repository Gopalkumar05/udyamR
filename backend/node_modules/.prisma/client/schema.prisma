generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id               Int      @id @default(autoincrement())
  aadhaar          String   @unique
  pan              String
  name             String
  category         String?
  gender           String?
  businessName     String
  organizationType String
  pincode          String
  state            String
  district         String
  address          String
  createdAt        DateTime @default(now())
}

model OtpRecord {
  id        Int      @id @default(autoincrement())
  aadhaar   String   @unique
  otp       String
  createdAt DateTime @default(now())
}
